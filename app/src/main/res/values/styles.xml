            <item name="color">@android:color/black</item>
        </style>-->

    <!-- Date picker style -->
    <style name="datePickerStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
</resources>
